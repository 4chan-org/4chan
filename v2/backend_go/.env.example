# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Server
PORT=8080
READ_TIMEOUT_SECONDS=10
WRITE_TIMEOUT_SECONDS=30
IDLE_TIMEOUT_SECONDS=120
API_PREFIX=api
API_VERSION=v1

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://neondb_owner:npg_mGXsRdat0E7q@ep-ancient-bonus-a4qfas6k-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=300

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
