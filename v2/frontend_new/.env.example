# API URLs
VITE_API_URL=http://localhost:8080/api/v1
VITE_AUTH_URL=http://localhost:8080/api/v1/auth
VITE_FILES_URL=http://localhost:8080/api/v1/files

# Feature flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_THEME_SELECTOR=true
VITE_ENABLE_CAPTCHA=true

# File upload limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cache settings
VITE_CACHE_TTL=300

# Captcha
VITE_CAPTCHA_SITE_KEY=

# Performance
VITE_LAZY_LOAD_IMAGES=true
VITE_THREAD_PAGINATION_LIMIT=50
VITE_CATALOG_PAGE_SIZE=20